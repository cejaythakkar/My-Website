#about-wrapper.section-wrapper
    .section-header
        h1 Things that i've done so far
        .line-wrapper
            .line
    .section-body
        ul.about-list.list
            each about in abouts
                li.list-item
                    div.card
                        div.card-image.col-12.col-sm-12(style="background-image:url('"+ about.imgUrl "')")
                        .card-body.p-0.p-sm-0
                            .card-title.mt-3.mt-sm-3
                                p.title #{about.title}
                                p.role #{about.role}
                                p.place #{about.place}
                            .card-description
                                p.description #{about.description}

