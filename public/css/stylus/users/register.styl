#sec-register{
    .card{
        h3{
            font-size:2.2rem;
        }
        p{
            font-size:1.6rem;
            margin:0;
        }
        .form-group{
            .form-control{
                border:none;
                padding:0;
                border-bottom:1px solid #ccc;
                font-size:1.5rem;
                &:focus,&:active{
                    outline:none;
                    box-shadow:none;
                }
            }
        }
        a.register-button{
            color:#fff;
            background-color:#f45;
            font-size:1.6rem
        }
    }
    .login-link-container{
        p{
            font-size:1.6rem
            a{
                color:#303e3e;
                &:hover{
                    text-decoration:none;
                }
            }
        }
    }
}
