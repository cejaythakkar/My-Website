@font-face
    font-family:'fred';
    src:url('/font/FrederickatheGreat-Regular.ttf') format('truetype');

@import 'nib'
@import 'about.styl'
@import 'belief.styl'
@import 'passion.styl'
@import 'contact.styl'
@import 'footer.styl'

bg-color = #f5f5f5 !important

html,body,.main-wrapper,.container,.content{
    height:100%;
}
html,body
    font-size:10px;
body
    background-color bg-color

html,body,.container-fluid{
    padding:0;
    margin:0;
}
.main-wrapper
    header.static-header
        position:fixed;
        width:100%;
        z-index:7;
        nav
            background: #3e3030
header
    height:6rem;
    nav
        a.navbar-brand.navigation-link
            padding:0;
            height:4.2rem;
            span
                font-size:2rem;
                color:#f5f5f5;
                vertical-align:middle;
            &.active
                border-bottom: 3px solid #f54;
                span
                    color: #ff5544 !important;
        height:100%;
        ul.navbar-nav
            li.nav-item.navigation-link
                height:4.2rem;
                margin-right:4rem;
                a.nav-link
                    padding:0;  
                    font-size:2rem;
                    color:#f5f5f5 !important;
                &.active
                    border-bottom: 3px solid #ff5544;
                    a.nav-link
                        color: #ff5544 !important;
.content
    ul
        padding:0;
        list-style:none;
        li.introduction-slide
            height:100%;
            background-image:url('/images/introduction_background.jpg');
            background-size:cover;
            background-attachment:fixed;
            display: flex;
            flex-direction: column;
            header
                nav
                    background-color:transparent !important;
            .introduction-slide-content
                height:100%
                h1
                    color:#ffffff;
        li.section
            div.section-content
                padding-top:6rem;

.bg-gray
    gackground-color:#eee;

.section-wrapper
    padding-top:6rem;

.section-wrapper
    .section-header
        h1
            text-align:center;
            color: #3e3030;
            margin-bottom:1rem;
        .line-wrapper
            width:100%;
            position:realtive;
            height:.3rem;
            .line
                height:.3rem;
                width:10%
                position:absolute;
                background:#3e3030;
                left:50%;
                transform:translateX(-50%);
                background:#ff5544;
    .section-body
        ul.list
            padding:5rem 0;

#resume-button
    padding:.5rem;
    color:#ff5544;
    position:fixed;
    bottom:1.5rem;
    right:1.5rem;
    font-size:1.8rem;
    transition:all .3s linear;
    background-color:#3e3030;
    &:hover
        text-decoration:none;
        color:#3e3030;
        background-color:#ff5544;
        transition:all .3s linear;


.opacity-0{
    opacity: 0!important;
}   
.opacity-1{
    opacity:1 !important;
}
.header
    transition:opacity .5s ease;
    .logo
        background-image: url(/images/JT.png);
        display: inline-block;
        height: 3.2rem;
        width: 3.2rem;
        background-size: cover;
        vertical-align: middle;
        background-position: center;
        margin-right:1rem;
    .d-lg-none
        button.navbar-toggler
            position:absolute;
            background-color:#3e3030;
            top:1rem;
            left:1rem;
            height:3.5rem;
        .navbar-nav.flex-column.align-items-center
            .nav-item.navigation-link
                display:none;
                margin:0;   
                &.active
                    display:block;

button.navbar-toggler
    background-color:transparent;
    position:fixed;
    top:1rem;
    left:1rem;
    font-size:2.5rem
    color:#f54
    z-index:10

#drawer
    position: fixed;
    z-index: 9;
    height: auto;
    width: 100%;
    background-color:#3e3030
    transition:top .8s ease-in-out
    &.closed
        top:-100%
    &.opened
        top:0
    &.closed,&.opened
        transition:top .8s ease-in-out
    ul.navbar-nav
        padding:3rem 0;
        li.nav-item
            &.active
                border-bottom:3px solid #f54
                a
                    color:#f54
            a
                font-size:2rem
                cursor:pointer
                color:#fff

    
@import 'media.styl'