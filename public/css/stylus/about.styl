@import 'blocks.styl'
#about-wrapper
    .section-body
        .about-list
            padding:5rem 0;
            .list-item
                margin-bottom:3.5rem;
                .card
                    background-color:transparent
                    border:none;
                    display:flex;
                    flex-direction:row;
                    flex-wrap:wrap;
                    .card-image
                        height:20rem;
                        background-image: url('/images/about/dummy_background.jpg');
                        background-size: cover;
                        background-position: center;
                        border-radius:2rem;
                    .card-body
                        padding:0 0 0 3.5rem;
                        flex:1;
                        .card-title
                            margin-bottom:1rem;
                            .title,.role,.place
                                margin-bottom:0
                            .title
                                font-size:2.4rem;
                                font-weight:bold;
                                color:#605ebb;
                                {crimson-bold-font}
                            .role
                                font-size:1.6rem;
                                font-weight:bold;
                                color:#5ba957;
                                {crimson-semibold-font}
                            .place
                                font-size:1.5rem;
                                font-weight:bold;
                                color:#50555c;
                                {crimson-semibold-italic-font}
                        .card-description
                            .description
                                font-size:1.5rem;
                                color:#50555c
                                {crimson-regular-font}
                       